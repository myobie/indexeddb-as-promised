  ],
  "author": "Nathan Herald <me@nathanherald.com> (http://nathanherald.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/myobie/indexeddb-as-promised/issues"
  },
  "homepage": "https://github.com/myobie/indexeddb-as-promised#readme",
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babelify": "^7.3.0",
    "blue-tape": "^1.0.0",
    "browserify": "^13.1.1",
    "standard": "^8.4.0",
    "tape-run": "^2.1.4",
    "watch": "^1.0.1"
  }
}
